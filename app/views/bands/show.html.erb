<div class="grid_12 band-name">
  <h1><%= @band.name %></h1>
</div>

<div class="grid_12">
  <% if @band_image %>
    <div class="img-left">
      <%= image_tag @band_image %>
    </div>
  <% end %>
  <div class="band-desc">
    <%= @band_desc.gsub(/<\!\[CDATA\[/, "").gsub(/\]\]\>/, "") %>
  </div>
</div>